{
  "expo": {
    "name": "FinanzApp",
    "slug": "finanzapp-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "finanzapp",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.finanzapp.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.finanzapp.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "supabaseUrl": "",
      "supabaseAnonKey": "",
      "apiBaseUrl": "http://localhost:8000",
      "appEnv": "development"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir a $(PRODUCT_NAME) acceder a tu c√°mara para escanear tickets."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir a $(PRODUCT_NAME) acceder a tus fotos para seleccionar tickets."
        }
      ]
    ]
  }
}
